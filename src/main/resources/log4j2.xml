<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!--        Consoles configuration-->

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!--        Files configuration-->

        <File name="RegistrationFilterFile"
              filename="${sys:LOG_PATH}/registration_filter.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="RegisterUserServletFile"
              filename="${sys:LOG_PATH}/register_user_servlet.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="LoginFilterFile"
              filename="${sys:LOG_PATH}/login_filter.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="UserRepositoryFile"
              filename="${sys:LOG_PATH}/user_repository.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="ProductRepositoryFile"
              filename="${sys:LOG_PATH}/product_repository.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

    </Appenders>

    <Loggers>

        <!--        File loggers-->

        <Logger name="com.askie01.filters.RegistrationFilter" level="info" additivity="false">
            <AppenderRef ref="RegistrationFilterFile"/>
        </Logger>

        <Logger name="com.askie01.services.registration.RegisterUserServlet" level="info" additivity="false">
            <AppenderRef ref="RegisterUserServletFile"/>
        </Logger>

        <Logger name="com.askie01.filters.LoginFilter" level="info" additivity="false">
            <AppenderRef ref="LoginFilterFile"/>
        </Logger>

        <Logger name="com.askie01.repositories.UserRepository" level="info" additivity="false">
            <AppenderRef ref="UserRepositoryFile"/>
        </Logger>

        <Logger name="com.askie01.repositories.ProductRepository" level="info" additivity="false">
            <AppenderRef ref="ProductRepositoryFile"/>
        </Logger>

        <!--        Root logger-->

        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
